@page
@model exe201.Pages.Staff.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "StaffLayout";
}

@section Styles {
    <link href="~/css/staffcategory.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .details-card {
            background: #ffffff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            .details-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 28px rgba(0, 0, 0, 0.15);
            }

        .section-title {
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .details-label {
            font-weight: 600;
            color: #333;
        }

        .action-links {
            margin-top: 1.5rem;
            text-align: center;
        }

            .action-links a {
                margin: 0 0.5rem;
                text-decoration: none;
            }
    </style>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="details-card">
                <div class="section-title">Category Details</div>

                <dl class="row">
                    <dt class="col-sm-4 details-label">
                        @Html.DisplayNameFor(model => model.Category.Name)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Category.Name)
                    </dd>
                    <dt class="col-sm-4 details-label">
                        @Html.DisplayNameFor(model => model.Category.CreatedAt)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Category.CreatedAt)
                    </dd>
                </dl>

                <div class="action-links">
                    <a asp-page="./Edit" asp-route-id="@Model.Category.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-page="./Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
