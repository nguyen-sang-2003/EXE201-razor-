@page
@model exe201.Pages.Staff.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "StaffLayout";
}

@section Styles {
    <link href="~/css/staffcategory.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-card {
            background: #ffffff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            .form-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 28px rgba(0, 0, 0, 0.15);
            }

        .section-title {
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
        }

        .btn-create {
            background-color: #0d6efd;
            color: #fff;
            border-radius: 25px;
            padding: 0.5rem 1.5rem;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }

            .btn-create:hover {
                background-color: #0a58ca;
            }

        .back-link {
            margin-top: 1rem;
            display: inline-block;
        }
    </style>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-card">
                <div class="section-title">Create New Category</div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Category.Name" class="form-label">Name <span class="text-danger">*</span></label>
                        <input asp-for="Category.Name" class="form-control" />
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Create" class="btn btn-create" />
                    </div>
                </form>

                <div class="text-center back-link">
                    <a asp-page="Index" class="text-decoration-none">← Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
