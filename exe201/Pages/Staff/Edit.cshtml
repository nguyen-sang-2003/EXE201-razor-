@page
@model exe201.Pages.Staff.EditModel

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Pages/Shared/StaffLayout.cshtml";
}

@section Styles {

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .edit-card {
            background: #ffffff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            .edit-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 28px rgba(0, 0, 0, 0.15);
            }

        .section-title {
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
        }

        .btn-group {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            gap: 1rem;
            margin-top: 1.5rem;
        }

            .btn-group .btn {
                min-width: 140px;
                padding: 0.5rem 1rem;
                font-weight: 500;
                border-radius: 6px;
                text-align: center;
                display: inline-flex;
                align-items: center;
                justify-content: center;
            }

            .btn-group .btn-outline-secondary {
                background-color: white;
                color: #333;
                border: 2px solid #ccc;
            }

                .btn-group .btn-outline-secondary:hover {
                    background-color: #f8f9fa;
                    border-color: #bbb;
                }
    </style>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="edit-card">
                <div class="section-title">Edit Category</div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Category.Id" />

                    <div class="mb-3">
                        <label asp-for="Category.Name" class="form-label">Category Name <span class="text-danger">*</span></label>
                        <input asp-for="Category.Name" class="form-control" />
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                    </div>

                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}