@page
@model exe201.Pages.Staff.IndexModel

@{
    ViewData["Title"] = "Categories";
    Layout = "StaffLayout";
}

@section Styles {
    <link href="~/css/staffcategory.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .section-header {
            margin: 2rem 0 1rem;
            text-align: center;
        }

        .table-wrapper {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }

        .btn-create {
            margin-bottom: 1rem;
            float: right;
        }

        .table thead th {
            background-color: #f8f9fa;
            font-weight: 600;
        }

        .table td, .table th {
            vertical-align: middle;
        }

        .action-links {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }

            .action-links a {
                min-width: 80px;
                height: 36px;
                font-size: 0.9rem;
                font-weight: 500;
                text-align: center;
                line-height: 36px;
                padding: 0;
            }

    </style>
}

<div class="container mt-5">
    <div class="section-header">
        <h2>Category List</h2>
    </div>

    <div class="table-wrapper">
        <a asp-page="Create" class="btn btn-success btn-create">+ Create New</a>

        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Category[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Category[0].CreatedAt)</th>
                    <th style="width: 200px; text-align: center;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Category)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td class="action-links">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
