@page
@model exe201.Pages.Admin.Users.EditModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit User</h1>

<hr />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="User.Id" />

    <div class="row">
        <!-- Cột trái: User Info -->
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="User.Username"></label>
                <input asp-for="User.Username" class="form-control" />
                <span asp-validation-for="User.Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="User.Email"></label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="User.Role"></label>
                <select asp-for="User.Role" class="form-control" asp-items="Model.RoleOptions"></select>
                <span asp-validation-for="User.Role" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="User.CreatedAt"></label>
                <input asp-for="User.CreatedAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="User.CreatedAt" class="text-danger"></span>
            </div>
        </div>

        <!-- Cột phải: User Profile -->
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="User.Profile.FullName"></label>
                <input asp-for="User.Profile.FullName" class="form-control" />
                <span asp-validation-for="User.Profile.FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="User.Profile.Address"></label>
                <input asp-for="User.Profile.Address" class="form-control" />
                <span asp-validation-for="User.Profile.Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="User.Profile.Phone"></label>
                <input asp-for="User.Profile.Phone" class="form-control" />
                <span asp-validation-for="User.Profile.Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="User.Profile.AvatarUrl"></label>
                <input asp-for="User.Profile.AvatarUrl" class="form-control" />
                <span asp-validation-for="User.Profile.AvatarUrl" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
