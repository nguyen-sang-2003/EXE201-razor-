<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Customer Area</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 bg-light p-3" style="min-height: 100vh;">
                <h4>Customer Dashboard</h4>
                <div class="list-group">
                    <a asp-page="/Customer/CustomerEdit" class="list-group-item list-group-item-action">Manage Index</a>
                    <a asp-page="/Customer/CustomerProfile" class="list-group-item list-group-item-action">Create Category</a>
                </div>
            </div>

            <!-- Content -->
            <div class="col-md-9 p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
