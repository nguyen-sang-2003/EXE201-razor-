@page "{id:int}"
@model exe201.Pages.Customer.CustomerProfileModel

@{
    ViewData["Title"] = "Customer Profile";
    Layout = "_CustomerLayout";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f6f9;
        }

        .profile-card {
            background: #fff;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease-in-out;
        }

            .profile-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
            }

        .profile-img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 1rem;
            border: 4px solid #e0e0e0;
        }

        .section-title {
            font-size: 2rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 2rem;
            position: relative;
        }

            .section-title::after {
                content: "";
                display: block;
                width: 60px;
                height: 4px;
                background-color: #0d6efd;
                margin: 8px auto 0;
                border-radius: 2px;
            }

        .btn-edit {
            background-color: #0d6efd;
            color: white;
            border-radius: 25px;
            padding: 0.5rem 1.5rem;
            transition: 0.3s;
            font-weight: 500;
        }

            .btn-edit:hover {
                background-color: #084298;
                transform: translateY(-2px);
            }

        dt {
            font-weight: 600;
            color: #555;
            margin-top: 1rem;
        }

        dd {
            margin-left: 0;
            color: #333;
        }
    </style>
}

<h2 class="text-center my-4">Customer Profile</h2>

@if (Model.Profile != null)
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="profile-card text-center">
                    <img src="@(Model.Profile.AvatarUrl ?? "/images/default-profile.png")"
                         alt="Profile Image"
                         class="profile-img" />

                    <h3>@Model.Profile.FullName</h3>
                    <p class="text-muted">@Model.Profile.Email</p>
                    <hr />

                    <dl class="text-start mt-4">
                        <dt>📞 Phone</dt>
                        <dd>@Model.Profile.Phone</dd>

                        <dt>🏠 Address</dt>
                        <dd>@Model.Profile.Address</dd>
                    </dl>

                    <div class="mt-4">
                        <a href="/Customer/EditProfile" class="btn btn-edit">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p class="text-danger text-center">Customer profile not found.</p>
}
